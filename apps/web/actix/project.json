{
  "name": "web_actix",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/web/actix/src",
  "targets": {
    "build": {
      "executor": "@monodon/rust:build",
      "outputs": [
        "{options.target-dir}"
      ],
      "options": {
        "target-dir": "dist/target/web_actix"
      },
      "configurations": {
        "production": {
          "release": true
        }
      }
    },
    "test": {
      "executor": "@monodon/rust:test",
      "outputs": [
        "{options.target-dir}"
      ],
      "options": {
        "target-dir": "dist/target/web_actix"
      },
      "configurations": {
        "production": {
          "release": true
        }
      }
    },
    "lint": {
      "executor": "@monodon/rust:lint",
      "outputs": [
        "{options.target-dir}"
      ],
      "options": {
        "target-dir": "dist/target/web_actix"
      }
    },
    "run": {
      "executor": "@monodon/rust:run",
      "outputs": [
        "{options.target-dir}"
      ],
      "options": {
        "target-dir": "dist/target/web_actix"
      },
      "configurations": {
        "production": {
          "release": true
        }
      }
    },
    "docker-gcp": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "gcloud builds submit . --substitutions _APP_NAME=web_actix,_IMAGE=web-actix --async --config ci/cloudbuild-run-container.yaml"
      }
    },
    "docker": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "push": true,
        "file": "./Dockerfile",
        "target": "final",
        "build-args": [
          "APP_NAME=web_actix"
        ],
        "metadata": {
          "images": [
            "yurikrupnik/web-actix"
          ],
          "tags": [
            "type=schedule",
            "type=ref,event=branch",
            "type=ref,event=tag",
            "type=ref,event=pr",
            "type=semver,pattern={{version}}",
            "type=sha"
          ]
        }
      }
    }
  },
  "tags": []
}
